<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="5dp"
                android:color="#3E2723" /> <!-- Border color (e.g., orange) -->
            <corners android:radius="2dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>
</layer-list>
